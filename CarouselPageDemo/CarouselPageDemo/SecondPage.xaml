<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarouselPageDemo.SecondPage">
    
    <ContentPage.Content>
        <StackLayout BackgroundColor="#303a3c">
            <Label 
                Text="Learn C# For Free With InfoBrother"
                HorizontalOptions="Center"
                FontAttributes="Bold" 
                TextColor="White"
                FontSize="18"
                Margin="0, 15, 0, 15"
            />

            <Image
                Source="csharp.png"                
            />

            <Button 
                Text="Get The Course Now"
                Margin="0, 20, 0, 0"
                BackgroundColor="#184757" 
                TextColor="White"
            />

            <Image
                Source="swipe.png"               
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>